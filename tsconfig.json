{
  "compilerOptions": {
    "noImplicitAny": true,
    "target": "ES2020",
    "module": "NodeNext",
    "jsx": "react",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "NodeNext",
    "typeRoots": [
      "typings",
      "node_modules/@types"
    ],
  },
  "include": [
    "src/**/*.ts",
    "typings/*.d.ts"
  ]
}
