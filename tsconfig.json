{
  "compilerOptions": {
    "noImplicitAny": true,
    "target": "ES2020",
    "module": "NodeNext",
    "jsx": "react",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "NodeNext"
  },
  "include": [
    "src/**/*.ts"
  ]
}
